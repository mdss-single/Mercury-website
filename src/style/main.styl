		color #465893
		font-weight bold
		font-size 3rem
		line-height 1
		text-transform uppercase
		padding-bottom 20px
		&::after
			position absolute
			bottom 0
			left 50%
			width 74px
			height 1px
			background-color #465893
			content ''
			transform translateX(-50%)
	&__descr
		color #777
		font-size 2.4rem
		line-height 1
		margin 50px 0
	&__notice
		font-size 1.4rem
		line-height 1
		margin 50px 0
	&__btn
		display flex
		justify-content center
/*  </home-about-us>  */

/*  <home-products>  */
.home-products
	background-color #E8E8E8
	padding 55px 0
	&__title
		position relative
		color #465893
		font-weight bold
		font-size 2.4rem
		line-height 1
		text-transform uppercase
		text-align center
		padding-bottom 20px
		margin-bottom 45px
		&::after
			position absolute
			bottom 0
			left 50%
			width 74px
			height 1px
			background-color #465893
			content ''
			transform translateX(-50%)
	&__items
		display flex
		flex-wrap wrap
		justify-content space-between
		margin 0 -25px
		@media $tablet
			margin 0
	&__item
		display flex
		flex-direction column
		align-items center
		width calc(20% - 25px)
		@media $tablet
			width calc(25% - 25px)
			margin-bottom 25px
		@media $phone
			width 100%
		&-pic
			display flex
			justify-content center
			align-items center
			overflow hidden
			position relative
			width 154px
			height 154px
			border-radius 50%
			margin-bottom 22px
			&::after
				position absolute
				top 0
				right 0
				bottom 0
				left 0
				background-color rgba(#465893, .3)
				content ''
				pointer-events none
			a
				width 100%
				height 100%
			img
				width 100%
				height 100%
				object-fit cover
		&-name
			color #777
			font-size 2rem
			text-decoration underline
			text-decoration-style dotted
			a:hover&
				text-decoration none
/*  </home-products>  */

/*  <home-advantage>  */
.home-advantage
	padding 55px 0
	&--about-us
		color #fff
		background-color #5769A3
	&__title
		position relative
		color #465893
		font-weight bold
		font-size 2.4rem
		line-height 1
		text-transform uppercase
		text-align center
		padding-bottom 20px
		margin-bottom 45px
		^[0]--about-us &
			color #fff
		&::after
			position absolute
			bottom 0
			left 50%
			width 74px
			height 1px
			background-color #465893
			content ''
			transform translateX(-50%)
			^[0]--about-us &
				background-color #fff
	&__items
		display flex
		justify-content space-between
		margin 0 -8px
		@media $tablet
			flex-wrap wrap
	&__item
		width calc(20% - 8px)
		text-align center
		@media $tablet
			width calc(50% - 16px)
			margin-bottom 30px
		@media $phone
			width 100%
		&-icon
			display flex
			justify-content center
			align-items center
			height 90px
			img
				max-height 100%
			svg
				fill #fff
				max-height 100%
		&-name
			position relative
			color #465893
			font-size 1.6rem
			line-height 1
			text-transform uppercase
			padding-bottom 15px
			margin-top 12px
			^[0]--about-us &
				color #fff
			span
				display block
			&::after
				position absolute
				bottom 0
				left 50%
				width 70px
				height 1px
				background-color #465893
				content ''
				transform translateX(-50%)
				^[0]--about-us &
					background-color #fff
		&-descr
			color #777
			font-size 1.6rem
			margin-top 18px
			^[0]--about-us &
				color #fff
/*  </home-advantage>  */

/*  <home-stat>  */
