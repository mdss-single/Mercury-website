	&__title
		position relative
		width 220px
		color #fff
		font-weight bold
		font-size 2.1rem
		line-height 2.6rem
		text-align center
		padding-bottom 20px
		margin 0 auto 44px
		&::after
			position absolute
			bottom 0
			left 50%
			width 70px
			height 1px
			background-color #fff
			content ''
			transform translateX(-50%)
	&__items
		display flex
		justify-content space-between
		@media $phone
			flex-wrap wrap
	&__item
		color #fff
		font-size 1.6rem
		line-height 1.2
		text-align center
		@media $phone
			width 100%
			margin-bottom 30px
		span
			display block
			font-size 4rem
/*  </home-stat>  */

/*  <send-message>  */
.send-message
	background-color #E8E8E8
	padding 46px 0 52px
	&__title
		color #777
		font-size 2.1rem
		text-transform uppercase
		text-align center
		margin-bottom 35px
	&__form
		display flex
		flex-wrap wrap
		justify-content space-between
		max-width 464px
		margin auto
		@media $phone
			max-width 100%
		&-input
			position relative
			width calc(50% - 22px)
			input
				width 100%
				height 40px
				color #777
				font-size 1.4rem
				background-color transparent
				border 0
				border-bottom 1px solid #A7A7A7
				padding 0 3px
				&:focus
					outline none
				& + label
					position absolute
					top 50%
					left 3px
					z-index 3
					color #A7A7A7
					font-size 1.4rem
					background-color #e8e8e8
					transform translateY(-50%)
					transition all .2s
					pointer-events none
				&:focus + label
				&:not(:placeholder-shown) + label
					top -2px
				&:invalid:not(:placeholder-shown)
					border-bottom-color #f00
					box-shadow none
		&-textarea
			width 100%
			height 94px
			color #777
			font-size 1.4rem
			background-color #fff
			border 0
			padding 12px 15px
			margin-top 30px
			resize none
			&:focus
				outline none
		&-submit
			display flex
			justify-content center
			width 100%
			margin-top 55px
/*  <send-message>  */

